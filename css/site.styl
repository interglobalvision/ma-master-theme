@import "sanitize"
@import "helpers"
@import "slick"

// Grid of 12 90px columns with 16px gutter
$cols = 12
$col = 90px
$gutter = 16px
.container
  margin: 0 auto
  width: ($col * $cols)+($gutter * $cols)
.row
  clear: both
.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
  box-sizing: content-box
for col in 1..$cols
  .col{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )

.percent-col
  float: left
  box-sizing: content-box
$pcols = 10
for pcol in 1..$pcols
  .into-{pcol}
    width: ( 100% / pcol )

// VARIABLES

$margin-small = ($gutter)
$margin-basic = ($gutter*2)
$margin-large = ($gutter*5)

$font-size-basic = 15px
$font-leading-basic = 1.35em
$font-tracking-basic = 0.001em

$font-size-heading = 40px
$font-size-subheading = 30px
$font-size-caption = 12px


$color-black-soft = rgb(14,14,14)
$color-white-soft = rgb(253,253,253)

$basic-animation-speed = 0.3s

// TYPOGRAPHY

body
  font-family:helvetica,arial,sans-serif
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

h1
  font-size: $font-size-heading

h2, h3
  font-size: $font-size-subheading

h4
  font-size: $font-size-basic

h5, h6
  font-size: $font-size-caption

h1,h2,h3,h4,h5,h6
  line-height: $font-leading-basic

p
  margin-bottom: 1em


// LINKS

a, a:active, a:visited
  color:inherit
  transition:opacity .2s
  &:hover
    opacity:.5


// BASIC

html
  background-color: $color-white-soft
  color: $color-black-soft

img
  max-width: 100%
  height: auto

.js-packery-container, .js-slick-container
  opacity: 0
  transition: opacity $basic-animation-speed


// HEADER

#header
  margin-top: $margin-basic
  margin-bottom: $margin-basic

#menu
  li
    display: inline-block
    margin-left: 0.5em

// SEARCH

#tags
  li
    display: inline-block
    margin-left: 0.5em

#search-input
  border-bottom: 1px dotted $color-black-soft
  outline: none
  
// SLIDER

.slick-slide img
  margin: 0 auto
    
.gallery-caption
  text-align: center
  padding: 1em 0 0
  display: block
  
.arrow
  position: absolute
  top: 50%

.arrow-prev
  left: 5%
  
.arrow-next
  right: 5%

// MEDIA QUERIES

@media screen and (max-width: ($col * $cols)+($gutter * $cols))

  $col = 80px
  $gutter = 14px
  .container
    margin: 0 auto
    width: ($col * $cols)+($gutter * $cols)
  .row
    clear: both
  .col
    float: left
    margin-left: ($gutter/2)
    margin-right: ($gutter/2)
    box-sizing: content-box
  for col in 1..$cols
    .col{col}
      width: ( col * $col ) + ( ( col - 1 ) * $gutter )
